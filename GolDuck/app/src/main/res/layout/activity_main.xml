<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.golduck.MainActivity">

        <ImageView
            android:layout_marginTop="25dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/logo3"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:onClick="practiceBtnClicked"
                    android:src="@drawable/menu_practice" />

                <ImageButton
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"

                    android:background="#00000000"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_record"/>

                <ImageButton
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:src="@drawable/menu_repeat" />

                <ImageButton
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="#00000000"
                    android:src="@drawable/menu_goal" />
        </LinearLayout>



</LinearLayout>
